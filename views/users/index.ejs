<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../stylesheets/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="navbar">
      <a href="/home">Home</a>
      <% if (user) { %>
      <a href="/<%= user._id %>/post">Post</a>
      <% } else { %>
      <a href="/auth/google">Post</a>
      <% } %>
      <div class="dropdown">
        <button class="dropbtn">
          <% if (user) { %>
          <img class="profile-pic" src="<%= user.avatar %>" />
          <br />
          <%= user.name %> <% } else {%>
          <img class="default-pic" src="https://i.imgur.com/hoVvDnJ.jpg" />
          <br />
          Sign up <% } %>
        </button>
        <div class="dropdown-content">
          <% let login = "auth/google"; %>
          <a href=<%= user ? `/${user._id}/profile` : login %>>Profile</a>
          <a href=<%= user ? `/${user._id}/post` : login %>>Post</a>
          <% if (user) { %>
          <a href="/logout">Log Out</a>
          <% } else { %>
          <a href="/auth/google">Login with Google</a>
          <% } %>
        </div>
      </div>
    </div>
    <h2>Recent Posts</h2>
    <div class="view-post">
      <% spots.forEach((spot) => { %>
          <div class="spot-posts">
              <label><%= spot.localName %>
                  <br />
              <a href="/spot-info/<%= spot.id %>"><img src="<%=spot.imgUrl %>" width="240px" height="160px"></label></a>
          </div>
      <% }) %>
  </div>
  </body>
</html>
